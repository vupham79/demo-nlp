<!doctype html>
<html>
 <head>
  <title>NLP.js</title>
 </head>
 <body id="chat">
  <div class="wrapper">
   <h1>
    <%= foundIntent.intent %>
   </h1>
   <form id="form">
    <input type="text" autocomplete="off" id="text" name="message" /><input class="button button2" type="submit" value="Find Intent" />
   </form>
  </div>
  <style>
   #chat {
    width: 100%;
    height: 30vh;
    overflow: auto;
    font: 13px Helvetica, Arial;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
   }
   .wrapper {
    width: 50%;
   }
   #form { width: 100%; background: #333; padding: 5px 10px }
   #form input[type=text] { width: 80%; padding: 5px; background: #fff; border: 1px solid #fff; }
   #form input[type=submit] { width: 17%; cursor: pointer; border: none; padding: 6px 8px; margin-left: 5px; }
   .button {
    transition-duration: 0.4s;
  }
  .button2 {
   background-color: white; 
   color: black; 
   border: 2px solid #008CBA;
  }
  .button2:hover {
   background-color: #008CBA;
   color: white;
  }
  </style>
 </body>
</html>